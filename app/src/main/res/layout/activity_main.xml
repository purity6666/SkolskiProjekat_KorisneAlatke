<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/pretvarac_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pretvaranje brojeva"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@+id/rc_btn"
        app:layout_constraintEnd_toEndOf="@+id/rc_btn"
        app:layout_constraintStart_toStartOf="@+id/rc_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/buttonColorMain"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/rc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matematika Lekcije/zadaci"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/buttonColorMain"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eduis_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UÄ‘i na EDUIS"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="30dp"
        android:backgroundTint="@color/buttonColorMain2"
        app:layout_constraintEnd_toEndOf="@+id/rc_btn"
        app:layout_constraintStart_toStartOf="@+id/rc_btn"
        app:layout_constraintTop_toBottomOf="@+id/rc_btn"
        app:layout_constraintVertical_bias="0.050000012" />

    <Button
        android:id="@+id/tutorijal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonColorMain2"
        android:paddingHorizontal="30dp"
        android:text="Kako koristiti EDUIS?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/eduis_btn"
        app:layout_constraintStart_toStartOf="@+id/eduis_btn"
        app:layout_constraintTop_toBottomOf="@+id/eduis_btn"
        app:layout_constraintVertical_bias="0.050000012" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:srcCompat="@drawable/ic_mrkonji__grad__grb_" />

</androidx.constraintlayout.widget.ConstraintLayout>